{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "Invoke-Build",
            "group": "build",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            }
        },
        {
            "label": "documentation",
            "type": "shell",
            "command": "Invoke-Build -Task BuildDocs",
            "group": "build",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "Invoke-Build -Task Clean",
            "group": "build",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            }
        },
        {
            "label": "analyze",
            "type": "shell",
            "command": "Invoke-Build -Task Analyze",
            "group": "test",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            }
        },
        {
            "label": "install",
            "type": "shell",
            "command": "Invoke-Build -Task Install",
            "group": "none",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "Invoke-Build -Task Test",
            "group": "test",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            },
            "problemMatcher": "$pester"
        }
    ]
}
